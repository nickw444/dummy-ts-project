{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./src",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "packages"]
}
